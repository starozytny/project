{% set typeVariants = {
    blue: 'bg-blue-50 text-blue-700 border border-blue-400',
    red: 'bg-red-50 text-red-700 border border-red-500',
    gray: 'bg-gray-50 text-gray-700 border',
} %}

<div class="flex flex-row gap-4 {{ typeVariants[alert_type] }} rounded-md p-6 xl:p-4">
    {% if alert_icon is defined %}
        <div><span class="icon-{{ alert_icon}}"></span></div>
    {% endif %}
    <div>
        {% if alert_title is defined %}
            <div class="font-semibold mb-2 xl:mb-0">{{ alert_title }}</div>
        {% endif %}
        <div class="leading-6">{{ alert_text | raw }}</div>
    </div>
</div>

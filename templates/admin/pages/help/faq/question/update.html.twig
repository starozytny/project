{% extends 'admin/pages/help/template.html.twig' %}

{% set page_title %}Modifier {{ elem.name }} #{{ elem.id }}{% endset %}
{% set page_subtitle %}Modifier les informations de {{ elem.name}} : #{{ elem.id }}.{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ icon:'pencil', text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    {% include "layout/components/admin/page_toolbar.html.twig" with { page_back: path('admin_help_faq_index') } %}

    <div id="help_faq_question_update"
         data-obj="{{ obj }}"
         data-category="{{ cat }}"
    >
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}

{% extends 'admin/pages/mails/template.html.twig' %}

{% set page_title %}Boite d'envois{% endset %}
{% set page_subtitle %}Les réponses ne sont pas récupérées.{% endset %}

{% block main_content %}
    <div class="main-content">
        <div id="mails"
             data-context="{{ type }}"
             data-total-s="{{ totalSent }}"
             data-total-t="{{ totalTrash }}"
             data-donnees="{{ data }}"
             data-from="{{ from }}"
             data-from-name="{{ fromName }}"
        >
            {% include "layout/components/tailwind/loaders/loader.html.twig" %}
        </div>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
